  <% layout("/layouts/boilerplate.ejs")%>
 
  <body>
      <div class="row">
          <div class="col-8 offset-2">
              <h1>Add New Listing</h1>
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- title -->
          <div class="md-3">
          <label for="title" class="form-label">Enter Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Title"
            class="form-control"
            required
          />
        </div>
        <br />
  <!-- description -->
        <div class="md-3">
          <label for="description" class="form-label">Enter Description</label>
          
          <input
            type="text"
            name="listing[description]"
            placeholder="Description"
            class="form-control"
            required
          />
        </div>

        <br />
        <!-- image -->
        <div class="md-3">
          <label for="image" class="form-label">Upload image file</label> 
          <input
            type="file"
            name="listing[image]"
            placeholder="url"
            class="form-control"
          
          />
        </div>
        <br />
        <!-- price -->
          <div class="row ">
        <div class=" col-md-4">
          <label for="price" class="form-label">Enter Price</label> 
          <input
            type="text"
            name="listing[price]"
            placeholder="Price"
            class="form-control"
            required
          />
        </div>
        <br />
        <!-- location -->
        <div class=" col-md-8">
          <label for="location" class="form-label">Enter Location</label> 
          <input
            type="text"
            name="listing[location]"
            placeholder="Location"
            class="form-control"
            required
          />
        </div>
      </div>
      
        <br />
        <!-- country -->
        <div class="md-3">
          <label for="country" class="form-label">Enter Country</label> 
          <input
            type="text"
            name="listing[country]"
            placeholder="country"
            class="form-control"
            required
          />
        </div>

        <br />

        <button>Add</button>
      </form>
  </div>
  </div>
    </body>

